# Storage backend: firestore | json
STORAGE_BACKEND=firestore

# Firebase project id (optional if included in service account JSON)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Relative path is resolved from invoiceforge-backend/
FIREBASE_SERVICE_ACCOUNT_FILE=firebase/service-account.json

# Firestore collection used to store one document per Firebase UID
FIRESTORE_COLLECTION=invoiceforge_users
